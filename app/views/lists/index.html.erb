
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(http://t0.gstatic.com/licensed-image?q=tbn:ANd9GcQ5qUrWWMzah0tvwle-XwXvo7vuLusArdAYQHlBvB_1WwVfY_2IG5s_QGKctYg1hVMc324FwYF4DoiXoW5L_LM);">
  <div class="container">
    <h1>All<strong>Lists</strong></h1>
    <a class="btn btn-flat"
<%= link_to "New Lists", new_list_path  %></a>
  </div>
</div>

<div class="d-flex p-2 mx-20">
  <% @lists.each do |list| %>
    <div class="card " style="width: 12rem; height: 20rem;">
      <%= cl_image_tag list.photo.key, crop: :fill %>
      <div class="card-body">
        <h5 class="card-title"><%= link_to list.name, list_path(list)%></h5>
      </div>
    </div>
  <% end %>
</div>
